<input class="text_input" placeholder="@Placeholder" value="@Value" bind="Value" @bind:event="oninput" @oninput="() => InputEvent()" />

@code
{
    [Parameter]
    public string Placeholder { get; set; } = string.Empty;

    [Parameter]
    public string Value { get; set; } = string.Empty;

    [Parameter]
    public EventCallback<string> OnInput { get; set; }    

    protected async Task InputEvent()
    {
        await OnInput.InvokeAsync(Value);
    }
}