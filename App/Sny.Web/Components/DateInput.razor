@using System.Globalization

<input type="date" value="@Value.ToString("YYYY-MM-DD")" @onchange="(e) => ChangeEvent(e.Value?.ToString() ?? string.Empty)" />

@code
{
    [Parameter]
    public DateTime Value { get; set; }

    [Parameter]
    public EventCallback<DateTime> OnChange { get; set; }    

    protected async Task ChangeEvent(string value)
    {
        await OnChange.InvokeAsync(DateTime.ParseExact(value, "YYYY-MM-DD", CultureInfo.InvariantCulture));
    }
}